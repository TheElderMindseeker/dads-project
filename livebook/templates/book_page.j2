{% extends "nav_page.j2" %}
{% block content %}
  <div class="container">
    <div class="row mb-4">
      <div class="col-12">
        <nav class="mb-2">
          <div class="nav nav-tabs" id="navTab">
            <a class="nav-item nav-link active" id="navTextTab" data-toggle="tab" href="#navText">Text</a>
            <a class="nav-item nav-link" id="navStatsTab" data-toggle="tab" href="#navStats">Stats</a>
            <a class="nav-item nav-link" id="navOathsTab" data-toggle="tab" href="#navOaths">Oaths</a>
          </div>
        </nav>
        <div class="tab-content" id="navTabContent" style="height: 50vh;">
          <div class="tab-pane fade show active overflow-auto h-100" id="navText"></div>
          <div class="tab-pane fade offset-2 col-8 overflow-auto h-100" id="navStats">
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">Attribute</th>
                  <th scope="col">Value</th>
                </tr>
              </thead>
              <tbody id="attributeTable"></tbody>
            </table>
          </div>
          <div class="tab-pane fade overflow-auto h-100" id="navOaths"></div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="list-group" id="optionsList"></div>
    </div>
  </div>
{% endblock %}
{% block scripts %}
  <script src="{{ url_for('static', filename='js/page.js') }}"></script>
{% endblock %}
